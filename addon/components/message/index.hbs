<div
  role="alert"
  class="message"
  data-type={{@type}}
  data-dismissed={{this.dismissed}}
  ...attributes
  {{this.registerElement}}
>
  <div class="message__body">
    {{yield}}
  </div>
  {{#if this.isDismissible}}
    <button
      type="button"
      class="message__dismiss"
      aria-label="Dismiss"
      {{on "click" this.dismiss}}
    ></button>
  {{/if}}
</div>