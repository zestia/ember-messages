<div
  role="alert"
  class={{concat
    "message "
    (if @type (concat "message--" @type))
    (if
      @dismissable
      (concat " message--" (if this.isDismissed "dismissed" "revealed"))
    )
  }}
  ...attributes
  {{this.registerElement}}
  {{on "animationend" this.handleAnimationEnd}}
>
  <div class="message__body">
    {{yield}}
  </div>
  {{#if @dismissable}}
    <button
      type="button"
      class="message__dismiss"
      aria-label="Dismiss"
      {{on "click" this.handleClickDismiss}}
    ></button>
  {{/if}}
</div>